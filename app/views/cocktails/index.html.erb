<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row justify-content-center my-3">
        <h3>All cocktails</h3>
      </div>
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail), {:class => "text-decoration-none" } do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
              <h4>
              <%= cocktail.name %>
              </h4>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>



