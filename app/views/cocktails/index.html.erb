<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row justify-content-center my-3">
        <h3>All cocktails</h3>
      </div>
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <%= cocktail.name %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= cl_image_tag("https://res.cloudinary.com/astrida/image/upload/v1581679217/s8kxziwidoa7r6m6sctm.jpg", width: 400, height: 300, crop: :fill) %>


