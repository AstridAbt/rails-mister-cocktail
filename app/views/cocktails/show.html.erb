<div class="card-category-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1> <%= @cocktail.name %></h1>
</div>

<!-- Ingredient's list -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <div class="mt-3">
        <h4>Ingredient list</h4>
      </div>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </li>
      <% end %>
    </div>
    <div class="col-4">
      <h4>Add a new ingredient</h4>
      <%= simple_form_for ([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, as: :select %>
        <%= f.submit 'Save your dose', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<br>
<!-- form -->
<div class="container">
  <div class="row justify-content-center">
    <%= link_to "Back to cocktail list", cocktails_path %>
  </div>
</div>
